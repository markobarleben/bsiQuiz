<header>
    <h1> BSI-Quiz Frage <span><%- data.questionId %>  von <%- questionLength %> </span></h1>
</header>
<div class="container">
    <div class="row justify-content-md-center row_question">
        <div class="col-lg-9 col-md-9 col-xs-9 question-contend">
            <div class="questionBox" data-id=<%- data.questionId %> >

                <p id="facts-box">
                    <%- data.facts %>
                </p>

                <div id="accordion" role="tablist">
                    <div class="card">
                        <div class="card-header" role="tab" id="headingOne">
                            <h6 class="mb-0">
                                <a data-toggle="collapse" href="#collapseOne" data-parent="accordion" role="button" aria-expanded="true" aria-controls="collapseOne">FRAGE</a>
                            </h6>
                        </div>
                        <div id="collapseOne" class="collapse in" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-block">
                               <p style="padding-top:10px;"> <%- data.text_question %> </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    <% var answerArrayLength = data.text_answer.answer.length %>
        <%if (answerArrayLength === 2) { %>
            <%- partial('../partials/answer_2.ejs') %>
                <% } else if (answerArrayLength === 4) { %>
                    <%- partial('../partials/answer_4.ejs') %>
                        <% } %>


</div>
</div>
<footer class="footer">
    <div class="footerContainer">
        <div><a href="#" data-toggle="modal" data-target="#modalInformation">Information</a>
            <a href="#" data-toggle="modal" data-target="#modalTeam">Team</a>
            <a href="mailto:marko@hyph.me?Subject=Hello%20again" target="_top">Kontakt</a></div>
    </div>
</footer>

<!-- Modal dialog nextQuestion-->
<div class="modal fade" id="myModal" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background:#1A1651; color:aliceblue">
                <h4>Result for Question: <span> <%- data.questionId %> </span></h4>
            </div>

            <div class="modal-body resultModalBody">
                    <div class="row">
                        <div class="col-lg-7 col-md-7 modal_left">
                            <p> </p>
                        </div>

                        <div class="col-lg-4 col-md-4 modal_right">
                            <h6>Your points for this question:</h6>

                            <div class="circle_in_modal">
                                <p class="points_in_circle"></p>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="nextButton">NÃ„CHSTE FRAGE</button>
            </div>
        </div>
    </div>
</div>
